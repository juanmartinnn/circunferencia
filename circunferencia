#include <iostream>
#define pi 3.141592
using namespace std;

class circunferencia{
 public:
    float radio;
    float perimetro;
    float diametro;
    float area;

};

int main(){

int radio,area,perimetro;

cout<<"Escriba el radio de la circunferencia"<<endl;
cin>>radio;
perimetro=2*pi*radio;
 area   = pi * radio * radio; //A = pi*r^2

cout<<"El perimetro es "<<perimetro<<endl;
cout<<"El area es "<<area <<endl;
cout<<"EL radio "<<radio<<endl;
cout<<"El diametro es "<<radio*2<<endl;


}

